<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragments.BasketFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/bottom_caterogy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/green_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back_caterogy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/back_icon"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_caterogy"
        app:layout_constraintStart_toStartOf="@+id/bottom_caterogy"
        app:layout_constraintTop_toTopOf="@+id/bottom_caterogy"
        app:layout_constraintWidth_percent="0.1" />

    <Button
        android:id="@+id/home_caterogy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/home_icon"
        android:isScrollContainer="true"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_caterogy"
        app:layout_constraintEnd_toEndOf="@+id/bottom_caterogy"
        app:layout_constraintTop_toTopOf="@+id/bottom_caterogy"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/header_caterogy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/green_background"
        android:gravity="center"
        android:shadowColor="@color/shadow_effect"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="5"
        android:text="MarLen"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>